!!! html

%html
  %head
    %title
      = yield(:title) || "Boom Bam Splash"
    = stylesheet_link_tag 'screen.css'
  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
          
        - if show_title?
          %h1=h yield(:title)

      = yield
